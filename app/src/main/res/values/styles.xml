<resources>
    <style name="TriviaQuiz" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/app_background_color</item>

        <!-- font settings -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>

        <item name="android:windowExitTransition">
            @transition/question_setup_exit
        </item>

    </style>

    <style name="TextViewDisplay1" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="editTextHintBlack" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="editTextHintGreen" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="editTextGreen" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="categoryName" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="black_20sp" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="userBar" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="categoryNameChosen" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="customSpinnerTheme" parent="TriviaQuiz">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#000000</item>
    </style>
</resources>
